{
  "name": "hofwerkz",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/node": "^22.13.14",
      "@orpc/server": "^1.12.2",
      "@orpc/client": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "better-auth": "^1.4.18",
      "@polar-sh/better-auth": "^1.6.4"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo run dev --filter=web --filter=@hofwerkz/convex --concurrency=50%",
    "dev:all": "turbo run dev --concurrency=50%",
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "dev:native": "turbo run dev --filter=native",
    "dev:mobile": "turbo run dev --filter=mobile",
    "dev:web": "turbo run dev --filter=web",
    "clean:native": "bun run --cwd apps/native clean:rust",
    "clean:mobile": "bun run --cwd apps/mobile clean:rust",
    "mobile:ios:init": "bun run --cwd apps/mobile ios:init",
    "mobile:ios:dev": "lsof -tiTCP:1422 -sTCP:LISTEN | xargs kill -9 2>/dev/null; lsof -tiTCP:1423 -sTCP:LISTEN | xargs kill -9 2>/dev/null; bun run --cwd apps/mobile ios:dev",
    "mobile:ios:build": "bun run --cwd apps/mobile ios:build",
    "convex:dev": "convex dev",
    "convex:codegen": "convex codegen",
    "convex:deploy": "convex deploy",
    "check": "ultracite check",
    "fix": "ultracite fix"
  },
  "dependencies": {
    "@hofwerkz/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.0",
    "@convex-dev/better-auth": "^0.10.10",
    "@hofwerkz/config": "workspace:*",
    "@types/node": "catalog:",
    "better-auth": "^1.4.18",
    "convex": "^1.28.3",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "ultracite": "7.2.3"
  },
  "packageManager": "bun@1.3.3"
}
